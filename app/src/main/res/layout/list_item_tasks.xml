<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    card_view:cardBackgroundColor="@color/cardview_light_background"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="10dp">


<RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">


    <CheckBox
        android:id="@+id/list_item_tasks_completed_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:buttonTint="@android:color/holo_purple"
        android:padding="4dp"
        />



    <TextView
        android:id="@+id/list_item_tasks_code_textview"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="Subject Code"
        tools:text="Subject Code"
        android:padding="20dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/list_item_tasks_title_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_tasks_code_textview"
        android:gravity="center_vertical"
        tools:text="Subject Title "
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/list_item_tasks_type_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/list_item_tasks_code_textview"
        android:layout_below="@id/list_item_tasks_title_textview"
        android:gravity="center_vertical"
        android:textSize="15sp"
        tools:text="Type"/>


    <TextView
        android:id="@+id/list_item_tasks_date_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/list_item_tasks_code_textview"
        android:layout_below="@id/list_item_tasks_type_textview"
        android:gravity="center_vertical"
        android:textSize="15sp"
        tools:text="Due Date"
        />




</RelativeLayout>

</android.support.v7.widget.CardView>