<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    card_view:cardBackgroundColor="@color/cardview_light_background"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="10dp">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:id="@+id/list_subject"
                android:layout_height="wrap_content"
                android:padding="1dip"
                android:orientation="horizontal">



    <TextView
        android:id="@+id/list_item_subjects_code_textview"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="Subject Code"
        tools:text="Subject Code"
        android:padding="20dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:textSize="20sp"/>



    <TextView
    android:id="@+id/list_item_subjects_title_textview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@id/list_item_subjects_code_textview"
    android:gravity="center_vertical"
    tools:text="Subject Title"
    android:textAllCaps="true"
    android:textStyle="bold"
    android:textSize="18sp"/>


    <TextView
        android:id="@+id/list_item_subjects_lecturer_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/list_item_subjects_code_textview"
        android:layout_below="@id/list_item_subjects_title_textview"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:text="Lecturer"
        android:paddingBottom="2dp"
        android:textSize="16sp"/>


    <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="10dp"
                    android:layout_below="@id/list_item_subjects_lecturer_textview"
                    android:layout_toRightOf="@id/list_item_subjects_code_textview"
                    android:stretchColumns="0,1,2,3,4">

        <TableRow>

    <TextView
        android:id="@+id/list_item_subjects_day1_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_code_textview"
        android:layout_below="@id/list_item_subjects_lecturer_textview"
        tools:text="Day"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/list_item_subjects_time1start_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_day1_textview"
        android:layout_below="@id/list_item_subjects_lecturer_textview"
        tools:text="Time"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/list_item_subjects_time1end_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_time1start_textview"
        android:layout_below="@id/list_item_subjects_lecturer_textview"
        tools:text="Time"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/list_item_subjects_location1_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_time1end_textview"
        android:layout_below="@id/list_item_subjects_lecturer_textview"
        android:gravity="center_vertical"
        tools:text="Location"
        android:textSize="16sp"/>


    </TableRow>



    <TableRow>

    <TextView
        android:id="@+id/list_item_subjects_day2_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_code_textview"
        android:layout_below="@id/list_item_subjects_day1_textview"
        tools:text="Day"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/list_item_subjects_time2start_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_day2_textview"
        android:layout_below="@id/list_item_subjects_time1start_textview"
        tools:text="Time"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/list_item_subjects_time2end_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_time2start_textview"
        android:layout_below="@id/list_item_subjects_time1end_textview"
        tools:text="Time"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/list_item_subjects_location2_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_time2end_textview"
        android:layout_below="@id/list_item_subjects_location1_textview"
        tools:text="Location"
        android:textSize="16sp"/>


        </TableRow>


<TableRow>

    <TextView
        android:id="@+id/list_item_subjects_day3_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_code_textview"
        android:layout_below="@id/list_item_subjects_day2_textview"
        tools:text="Day"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/list_item_subjects_time3start_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_day3_textview"
        android:layout_below="@id/list_item_subjects_time2start_textview"
        tools:text="Time"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/list_item_subjects_time3end_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_time3start_textview"
        android:layout_below="@id/list_item_subjects_time2end_textview"
        tools:text="Time"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/list_item_subjects_location3_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_subjects_time3end_textview"
        android:layout_below="@id/list_item_subjects_location2_textview"
        tools:text="Location"
        android:textSize="16sp"/>

        </TableRow>
        </TableLayout>


</RelativeLayout>

</android.support.v7.widget.CardView>



